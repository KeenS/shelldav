#!/bin/sh

BASE_URL=http://webdav.example/your/dir/

# If authorization required
# USER=me
# PASSWORD=mypassword
# USE_DIGEST=true

# any curl options you want to pass to
GLOBAL_CURL_OPTIONS='-L'

# For more information, see https://github.com/KeenS/shelldav


#################################################################################
